
class SmartDir:

    def __init__(self,dirname):

        self.dirname=dirname

    def __getitem__(self,filename):

        with open(self.dirname+'/'+filename) as f:
            return f.read()


    def __setitem__(self,filename,value):
        
        with open(self.dirname+'/'+filename,'w') as f:
            f.write(value)


